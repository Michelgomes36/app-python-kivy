#define o gerenciador de telas e as telas que ele vai controlar
ScreenManager:
    TelaLogin:
    TelaBoasVindas:

#Tela inicial de login define pelo nome 'login'
<TelaLogin>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        TextInput:
            id: usuario
            hint_text: 'Usu√°rio'
            multiline: False

        TextInput:
            id: senha
            hint_text: 'Senha'
            password: True
            multiline: False

        Button:
            text: 'Entrar'
            on_press:
                root.validar_login()

        Label:
            id: resultado
            text: ''


#Tela principal definado pelo nome 'boas_vindas'
<TelaBoasVindas>:
    name: 'boas_vindas'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20

        Label:
            text: 'Bem-vindo!'
        Button:
            text: 'Voltar'
            on_press:
                app.root.current = 'login'